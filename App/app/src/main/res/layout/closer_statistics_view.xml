<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    >

    <ImageView
        android:id="@+id/closerStatsImage2"
        android:layout_width="45dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/closerStatsImage3"
        app:layout_constraintTop_toTopOf="@+id/closerStatsImage3"
        app:srcCompat="@android:color/background_dark" />

    <ImageView
        android:id="@+id/closerStatsImage3"
        android:layout_width="45dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFigure"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/textViewFigure"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="ONE PAIR OF DEUCE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/closerStatsImage4"
        android:layout_width="45dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/closerStatsImage3"
        app:layout_constraintTop_toTopOf="@+id/closerStatsImage3"
        app:srcCompat="@android:color/background_dark" />

    <ImageView
        android:id="@+id/closerStatsImage1"
        android:layout_width="45dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/closerStatsImage2"
        app:layout_constraintTop_toTopOf="@+id/closerStatsImage3"
        app:srcCompat="@android:color/background_dark" />

    <ImageView
        android:id="@+id/closerStatsImage5"
        android:layout_width="45dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/closerStatsImage4"
        app:layout_constraintTop_toTopOf="@+id/closerStatsImage3"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:text="getting"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewGetting"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/closerStatsImage1"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:text="getting as highest"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewAsHighest"
        app:layout_constraintEnd_toEndOf="@+id/closerStatsImage3"
        app:layout_constraintTop_toBottomOf="@+id/closerStatsImage2"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="winning with"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewWinning"
        app:layout_constraintStart_toStartOf="@+id/closerStatsImage3"
        app:layout_constraintTop_toBottomOf="@+id/closerStatsImage4"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="drawing with"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewDrawing"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/closerStatsImage5"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textViewGetting"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:text="20.6"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewAsHighest" />

    <TextView
        android:id="@+id/textViewAsHighest"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:text="20.6"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/closerStatsImage3" />

    <TextView
        android:id="@+id/textViewWinning"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:text="20.6"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/closerStatsImage3" />

    <TextView
        android:id="@+id/textViewDrawing"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:text="20.6"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewWinning" />
</android.support.constraint.ConstraintLayout>