<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/border"
    android:minHeight="100dp">

    <ImageView
        android:id="@+id/cardInRow1"
        android:layout_width="81dp"
        android:layout_height="108dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardInRow2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardInRow2"
        android:layout_width="81dp"
        android:layout_height="108dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardInRow3"
        app:layout_constraintStart_toEndOf="@+id/cardInRow1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardInRow4"
        android:layout_width="81dp"
        android:layout_height="108dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardInRow3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardInRow3"
        android:layout_width="81dp"
        android:layout_height="108dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardInRow4"
        app:layout_constraintStart_toEndOf="@+id/cardInRow2"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>