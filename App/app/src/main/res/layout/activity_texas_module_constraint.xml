<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cardImageView1"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/addCardButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cardImageView0"
        app:layout_constraintTop_toBottomOf="@+id/cardImageView4"
        app:srcCompat="@drawable/unused" />

    <ImageView
        android:id="@+id/cardImageView0"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/cardImageView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImageView2"
        app:srcCompat="@drawable/unused"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cardImageView6"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toEndOf="@+id/cardImageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unused"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cardImageView5"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/cardImageView6"
        app:layout_constraintStart_toEndOf="@+id/cardImageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unused"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cardImageView4"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/cardImageView5"
        app:layout_constraintStart_toEndOf="@+id/cardImageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unused"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cardImageView3"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/cardImageView4"
        app:layout_constraintStart_toEndOf="@+id/cardImageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unused"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cardImageView2"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/cardImageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unused" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addCardButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardImageView1"
        app:layout_constraintTop_toBottomOf="@+id/cardImageView5"
        app:rippleColor="@android:color/background_light"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:srcCompat="@android:drawable/ic_menu_add" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCardButton"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>