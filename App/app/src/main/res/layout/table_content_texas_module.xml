<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_below="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton0"
        app:srcCompat="@drawable/unused"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/imageButton0" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        app:srcCompat="@drawable/unused"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageButton4"
        android:padding="5dp"
        app:srcCompat="@drawable/unused"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/unused"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton4"
        android:padding="5dp"
        app:srcCompat="@drawable/unused"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton3"
        android:padding="5dp"
        app:srcCompat="@drawable/unused"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton0"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton2"
        android:layout_marginStart="116dp"
        app:srcCompat="@drawable/to_add"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="116dp" />
</RelativeLayout>